<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_8"
    app:cardElevation="@dimen/dimens_2"
    card_view:cardCornerRadius="@dimen/dimens_8"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/dimens_8"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_tool"
            android:layout_width="@dimen/dimens_64"
            android:layout_height="@dimen/dimens_64"
            android:src="@drawable/ic_whatsapp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimens_4"
            android:textSize="@dimen/textSize_13"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/unknown_whatsapp_number" />
    </LinearLayout>


</androidx.cardview.widget.CardView>